<p id="notice"><%= notice %></p>

<div class="container">
  <div class="row">
    <div class="col-sm-offset-2 col-sm-8">

      <%@posts.each do |p| %>
        <div class='post-stuff'>
          <h3 class='post-title'><%=link_to p.title, post_path(p)%></h3>
          <%= markdown(truncate(p.body, length: 200, separator: ' ',)) %>
          <div class='why'>
            <%= link_to "Continue reading", post_path(p), class: 'read-more' %>
          </div>
          <div class='post-separator'> </div>
        </div>
      <%end%>

    </div>
  </div>
</div>


<% if admin_signed_in? %>
  <%= link_to 'New Post', new_post_path %>
  <%= link_to 'Sign out', destroy_admin_session_path, :method=> :delete%>
<%end%>
