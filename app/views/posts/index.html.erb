<p id="notice"><%= notice %></p>

<div class="container">
  <div class="row">
    <h1 class="pjonestown">Paul</h1>
    <h1 class="pjonestown">Johnston</h1>
    <p class="desc">traveller, learner, landlubber</p>
    <div class="col-sm-offset-2 col-sm-8 top-bars">
      <div class=top-sep></div>
      <div class=top-sep></div>
    </div>
    <div class="col-sm-offset-2 col-sm-8">
      <%@posts.each do |p| %>
        <div class='post-stuff'>
          <h3 class='post-title'><%=p.title%></h3>
          <%= markdown(truncate(p.body, length: 200, separator: ' ',)) %>
          <%= link_to "Continue reading", '#' %>
          <div class='post-separator'> </div>
        </div>
      <%end%>
    </div>
  </div>
</div>


<% if admin_signed_in? %>
  <%= link_to 'New Post', new_post_path %>
  <%= link_to 'Sign out', destroy_admin_session_path, :method=> :delete%>
<%end%>
