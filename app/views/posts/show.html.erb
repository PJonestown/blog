<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= @post.body %>
</p>


<% if admin_signed_in? %>
  <%= link_to 'Edit', edit_post_path(@post) %> |
<% end %>

<% if admin_signed_in? %>
  <p>
    <%= "Signed in as #{current_admin}" %>
  </p>
<%elsif commenter_signed_in? %>
  <p>
    <%= "Signed in as #{current_commenter}" %>
  </p>
<% else %>
  <%= "Sign In to comment" %>
<%end%>
<%=  render 'comments/form' %>

<%=  nested_comments(@comments) %>

<%=  link_to 'Back', posts_path %>
