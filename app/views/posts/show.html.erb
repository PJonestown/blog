<p id="notice"><%= notice %></p>notice



<!-- Page Content -->
<div class="container">

  <div class="row">

      <!-- Blog Post Content Column -->
      <div class="col-lg-8">

      <!-- Blog Post -->

      <!-- Title -->
      <h1><%=@post.title%></h1>

      <!-- Post -->
      <p> <%= @post.body %> </p>

      <!-- Admin links -->
      <% if admin_signed_in? %>
        <%= link_to 'Edit', edit_post_path(@post) %> |
      <% end %>

      <!-- Comments form -->
      <div class='well well-lg'>

        <!-- Move to partial. Remove submit button if nobody signed in
        and show sign in links -->
        <% if admin_signed_in? %>
          <p>
            <%= "Signed in as #{current_admin}" %>
          </p>
        <%elsif commenter_signed_in? %>
          <ul>
            <li><%= "Signed in as #{current_commenter.name} with" %></li>
            <li><%=link_to("Sign Out", destroy_commenter_session_path, :method => :delete)%></li> 
          </ul>
        <% else %>
          <%= "Sign In to comment" %>
          <ul>
            <li>
            <A href= "/commenters/auth/twitter">Sign In with Twitter </A>
            </li>
            <li>
              <A href= "/commenters/auth/github">Sign In with Github</A>
            </li>
        <%end%>

        <%= simple_form_for([@post, @comment], class: 'form-vertical') do |f| %>
          <h4>Leave a Comment</h4>
          <div class="form-group">
            <%= f.text_area :body, class: 'form-control', rows: '3' %>
          </div>
          <button type="submit" class="btn btn-primary">Submit</button>

        <% end %>


      </div>
  </div>
</div>

<% @comments.each do |c| %>
  <ul>
    <li><%= c.owner %></li>
    <li><%= c.body %></li>
    <% if commenter_signed_in? && current_commenter.id == c.owner_id ||
      admin_signed_in? && current_admin.id == c.owner_id%>
     <li> <%= link_to 'Edit Comment', edit_comment_path(c) %> </li> 
   <% end %>

  </ul>
<% end %>

<%=  link_to 'Back', posts_path %>
